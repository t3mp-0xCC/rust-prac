use std::env;
use std::path::Path;
use std::str::FromStr;
use std::fs::File;
use std::io::prelude::*;
use std::io::Read;
use std::io::BufReader;
use rand::Rng;

/* TODO: reading act from file */
fn main() {
    let args: Vec<String> = env::args().collect();
    let path = Path::new(&args[1]);
    let path_display = path.display();
    let mut f =  File::open(&path)
        .expect("file not found !");

    let reader = BufReader::new(f);
    let mut element = Vec::new();
    let mut idx = 0;

    for line in reader.lines() {
        let value = Vec::new();
        element.push(value);
        for s in line.unwrap().split("\t") {
            let f_s = f32::from_str(s).unwrap();    //リテラル（&str）をfloatに変換
            element[idx].push(f_s);
        }
        idx+=1;
    }

}
